<script type="text/javascript">
    var wrap = document.getElementsByClassName("wrap")[0];
	 var imgs = wrap.getElementsByTagName("a");
	 var left = document.getElementById("left");
	 var right = document.getElementById("right");
	 var i = 0;
	 function imgTag(){
	 	imgs[i%9].style.display = "none";
        i++;
	 	imgs[i%9].style.display = "block";
	 }
	 var stop = setInterval(imgTag,2000) ;
	 wrap.onmouseover=function(){
	 	clearInterval(stop)
	 }
	 wrap.onmouseout = function(){
	 	stop = setInterval(imgTag,2000)
	 }
	 left.onclick = function(){
        imgs[i%9].style.display = "none";
        i--;
        if(i<0){
        	i=8;
        }
        imgs[i%9].style.display = "block";
	 }
	 right.onclick = function(){
        imgTag();
	 }
	window.onload = function(){
		var show = document.getElementById("biao");
		for (var i = 0; i < show.childNodes.length; i++) {
			show.childNodes[i].onmouseover = function(){
				this.className = "ishow";
			}
			show.childNodes[i].onmouseout = function(){
				this.className = "";
			}
		}
	}
	 
